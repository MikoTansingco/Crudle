<!DOCTYPE html>
<html>
<head>
	<link rel = "stylesheet" href = "/css/editprofile.css">
	<link rel="preconnect" href="https://fonts.gstatic.com">
	<link href="https://fonts.googleapis.com/css2?family=Oswald:wght@200&display=swap" rel="stylesheet">
	<link rel="stylesheet" href="https://fonts.googleapis.com/icon?family=Material+Icons">
    <script src="https://code.jquery.com/jquery-3.4.1.min.js" type="text/javascript"></script>
    <script type="text/javascript" src="/js/editprofile.js"></script>
</head>
<body>
<div class="main">
	<div class="dashboard">
		<b>Crudle</b>
		<a href="/portfolios">My Portfolios</a>
		<a class="active"> My Profile</a>
		<a href="/home">Home</a>
		<a href="/login" style="float:left;">Login</a>
		<a href="/logout" style="float:left;">Logout</a>
	</div>

	<form method="post" action="/editprofile/edit/{{username}}">
		<div class="panel">
			<div class="changeprofile">
				<img src = "/pics/profile pic.png">
			</div>

			<div class="user-details">
					<label for="a">Name:        </label>
					<input type="text" id="a" name="name" value="{{name}}">

					<br>
					<br>
					<br>

					<label for="b">Username:    </label>
					<input type="text" id="username" name="username" value="{{username}}">

					<br>
					<br>
					<br>

					<label for="c">Profession:  </label>
					<input type="text" id="c" name="profession" value="{{profession}}">
				
				<p id="error"></p>
			</div>

			<div class="user-contacts">
					<label for="a">Email:        </label>
					<input type="email" id="a" name="email" value="{{email}}">

					<br>
					<br>

					<label for="b">Birthday:    </label>
					<input type="date" id="b" name="birthday" value="{{birthday}}">

					<br>
					<br>

					<label for="c">Contact No:  </label>
					<input type="tel" id="c" name="contact" value="{{contactnumber}}">

					<br>
					<br>

					<label for="d">Country:  </label>
					<input type="text" id="d" name="country" value="{{country}}">

					<br>
					<br>

					<label for="e">Address:  </label>
					<input type="text" id="e" name="address" value="{{address}}">

					<br>
					<br>
					<br>
			</div>

			<div class="user-description">
				<h3>User Description</h3>
				<textarea id="a" name="description" style="width: 450px; height: 200px;" >{{bio}}</textarea>
			</div>
			
			<input type="file" id="file" name="file" style="margin-left: 25px; margin-top: 10px">
			
			<div class="panel" id="x" style="text-align:center">
				<button type="submit" id="save">Save Changes</button>
				<br>
				<br>
				<button onclick="history.go(-1)" type="button">Cancel</button>
			</div>
		</div>
	</form>
</div>
</body>
</html>